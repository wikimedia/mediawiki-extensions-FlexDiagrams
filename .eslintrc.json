{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"rules": {
		"camelcase": "off",
		"eqeqeq": "off",
		"jsdoc/require-param": "off",
		"new-cap": "off",
		"no-jquery/no-global-selector": "off",
		"no-undef": "off",
		"no-unused-vars": "off",
		"no-use-before-define": "off",
		"prefer-const": "warn",
		"no-var": "warn",
		"mediawiki/no-unlabeled-buttonwidget": "warn"
	}
}
